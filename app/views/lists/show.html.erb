<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://wallpaperaccess.com/full/3968039.jpg);">
  <div class="container">
   <h1> <%= @list.name %></h1>
  </div>
</div>

<div class="container">
  <div class="cards mt-3">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-trip">
    <img src= "<%= bookmark.movie.poster_url%>" />
      <div class="card-trip-infos">
        <div>
          <div class="title-rating">
            <h2><%= bookmark.movie.title %></h2>
            <p><%= bookmark.movie.rating %> â˜…</p>
          </div>
          <p><em><%= bookmark.movie.overview %></em></p>
        </div>

        <div class="bookmark-delete">
          <p> <%= bookmark.comment %> </p>
          <%= link_to bookmark_path(bookmark),
                        method: :delete,
                        data: { confirm: "Are you sure?" } do %>
                        <i class="far fa-trash-alt remove-absolute"></i>
                        <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>


<p> <%= link_to "Add Bookmark", new_list_bookmark_path(@list) %></p>

<%= link_to "Back", root_path %>

</div>
